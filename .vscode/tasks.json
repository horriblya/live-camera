{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Client Server",
            "type": "shell",
            "command": "npm",
            "args": ["start"],
            "options": {
                "cwd": "${workspaceFolder}/client"
            },
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Starting up.*",
                    "endsPattern": "^.*http-server.*port 3000.*"
                }
            }
        }
    ]
}
