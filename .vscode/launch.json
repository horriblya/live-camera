{
    "version": "0.2.0",
    "configurations": [
        {
            "command": "npm start",
            "name": "Run live-camera-app",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceFolder}/live-camera-app",
            "env": 
            {
                "PORT": "30001"
            }
        },
        {
            "name": "Attach to server in Docker",
            "type": "node",
            "request": "attach",
            "port": 39229,
            "address": "localhost",
            "localRoot": "${workspaceFolder}/live-camera-server",
            "remoteRoot": "/usr/app",
            "skipFiles": ["<node_internals>/**"]
        }
    ]
}